{
  "meta": {
    "project": "BrainDock",
    "design_language": "Seraphic Focus",
    "version": "1.0",
    "source_inspiration": "Vocabulary iOS App (Minimalist, Typography-Centric)"
  },
  "direction": {
    "vision": "A calm, intellectual and airy interface that mimics the clarity of a printed page. The UI should fade into the background, allowing the user to focus entirely on their study material. It avoids gamification clutter in favor of refined typography and generous whitespace.",
    "keywords": ["Seraphic", "Minimalist", "Typographic", "Paper-like", "Distraction-free"]
  },
  "palette": {
    "backgrounds": {
      "primary": "#F9F8F4",
      "secondary": "#F2F0EB",
      "surface": "#FFFFFF",
      "overlay": "rgba(255, 255, 255, 0.9)"
    },
    "text": {
      "primary": "#1C1C1E",
      "secondary": "#3C3C4399",
      "tertiary": "#3C3C434D",
      "inverse": "#FFFFFF"
    },
    "accents": {
      "primary": "#2C3E50", 
      "highlight": "#D4A373",
      "success": "#34C759",
      "warning": "#FF9500",
      "error": "#FF3B30"
    },
    "borders": {
      "subtle": "#E5E5EA",
      "focus": "#1C1C1E"
    }
  },
  "typography": {
    "families": {
      "display": {
        "name": "Serif",
        "fallback": "Georgia, 'Times New Roman', serif",
        "usage": "Headings, Large Stats, Focus Statements",
        "feeling": "Classic, Authoritative, Academic"
      },
      "interface": {
        "name": "Sans-Serif",
        "fallback": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "usage": "Buttons, Labels, Navigation, Data Tables",
        "feeling": "Clean, Modern, Functional"
      }
    },
    "hierarchy": {
      "h1": { "size": "32px", "weight": "700", "family": "display", "letter_spacing": "-0.02em" },
      "h2": { "size": "24px", "weight": "600", "family": "display", "letter_spacing": "-0.01em" },
      "h3": { "size": "20px", "weight": "600", "family": "interface" },
      "body_large": { "size": "18px", "weight": "400", "family": "display", "line_height": "1.5" },
      "body": { "size": "16px", "weight": "400", "family": "interface", "line_height": "1.5" },
      "caption": { "size": "13px", "weight": "500", "family": "interface", "text_transform": "uppercase", "letter_spacing": "0.05em" }
    }
  },
  "ui_components": {
    "buttons": {
      "primary": {
        "background": "#1C1C1E",
        "text_color": "#FFFFFF",
        "radius": "30px",
        "padding": "16px 32px",
        "typography": "interface",
        "weight": "600",
        "shadow": "0 4px 12px rgba(0,0,0,0.1)"
      },
      "secondary": {
        "background": "transparent",
        "text_color": "#1C1C1E",
        "border": "2px solid #E5E5EA",
        "radius": "30px",
        "padding": "14px 30px"
      },
      "ghost": {
        "background": "transparent",
        "text_color": "#1C1C1E",
        "padding": "8px 16px"
      }
    },
    "cards": {
      "background": "#FFFFFF",
      "radius": "20px",
      "shadow": "0 8px 24px rgba(0,0,0,0.04)",
      "padding": "24px",
      "border": "1px solid rgba(0,0,0,0.02)"
    },
    "inputs": {
      "background": "#F2F0EB",
      "radius": "12px",
      "border": "none",
      "padding": "16px",
      "text_color": "#1C1C1E",
      "placeholder_color": "#3C3C434D"
    },
    "modals": {
      "overlay_color": "rgba(0,0,0,0.4)",
      "background": "#FFFFFF",
      "radius": "24px",
      "shadow": "0 20px 40px rgba(0,0,0,0.1)"
    }
  },
  "layout_principles": {
    "spacing": {
      "base_unit": 4,
      "xs": "4px",
      "s": "8px",
      "m": "16px",
      "l": "24px",
      "xl": "32px",
      "xxl": "48px"
    },
    "containers": {
      "max_width": "1200px",
      "text_width": "680px"
    },
    "whitespace": "Generous. Use whitespace to group related elements rather than lines or boxes where possible."
  },
  "iconography": {
    "style": "Line/Stroke",
    "weight": "2px",
    "radius": "Round",
    "color": "CurrentColor"
  }
}